{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src",
    "src/**/*",
    "src/@types/svg.d.ts"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*"
  ],

  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "importsNotUsedAsValues": "preserve",
    "outDir": "dist",
    "target": "es6",
    "baseUrl": "./src",
    "lib": [
      "dom",
      "es6",
      "es2019"
    ],
    "module": "ES6",
    "moduleResolution": "Node",
    "types": [
      "node",
      "svelte"
     ]
  },

  "exclude": [
    "dist",
    "node_modules",
    "coverage",
    "config",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.story.tsx"
  ]
}
